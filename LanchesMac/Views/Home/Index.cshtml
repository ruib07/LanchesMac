@model HomeViewModel

<div class="row text-center">
    <h2>Lanches</h2>
</div>
<div class="container">
    <section id="sobre">
        <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <img src="~/images/layout/icons8-love-50.png" />
                <h3>Feitos com amor</h3>
                <p class="text-muted">Fazemos o seu lanche com carinho.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <img src="~/images/layout/icons8-get-dressed-50.png" />
                <h3>Prontos para entrega</h3>
                <p class="text-muted">Entregamos o seu pedido</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <img src="~/images/layout/icons8-desconto-48.png" />
                <h3>Preços Camaradas </h3>
                <p class="text-muted">Promoções imperdíveis.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <img src="~/images/layout/icons8-comida-natural-50.png" />
                <h3>Lanches Naturais</h3>
                <p class="text-muted">...saudáveis e naturais...</p>
            </div>
        </div>
    </section>
    <br />

    <partial name="_Carousel" />
    <br />

    <div class="row text-center">
        <h2>Os favoritos dos nossos clientes</h2>
    </div>

    <div class="row text-center">
        @foreach (var lanche in Model.LanchesPreferidos)
        {
            <partial name="_LanchesResumo" for="@lanche" />
        }
    </div>
    <br />
    <br />
</div>