@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>
<br />
<form method="get" class="form-inline" style="width: 40%">
    <div class="form-group d-flex align-items-center">
        <input name="filter" class="form-control mr-2 rounded-0 border-right-0" placeholder="Filtrar" value="@Model.RouteValue["Filter"]" style="flex: 1;">
        <button type="submit" class="btn btn-info rounded-0 border-left-0" style="color:white">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
        </button>
    </div>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEntregueEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apelido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPostal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEnviado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                </td>
                <td class="button-container" style="display:flex; justify-content:left;">
                    <button class="btn btn-success" style="margin: 0 10px; height:40px;">
                        <a asp-action="Edit" asp-route-id="@item.PedidoId" style="color:white; text-decoration:none">Editar</a>
                    </button>
                    <br><br>
                    <button class="btn btn-info" style="margin: 0 10px; height:40px;">
                        <a asp-action="Details" asp-route-id="@item.PedidoId" style="color:white; text-decoration:none">Detalhes</a>
                    </button>
                    <br><br>
                    <button class="btn btn-danger" style="margin: 0 10px; height:40px;">
                        <a asp-action="Delete" asp-route-id="@item.PedidoId" style="color:white; text-decoration:none">Eliminar</a>
                    </button>
                    <br><br>
                    <button class="btn btn-secondary" style="margin: 0 10px; height:40px; width:90px;">
                        <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId" style="color:white; text-decoration:none">Ver Itens</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div style="display: flex; flex-direction: column; align-items: center;">
    <p>Total de Pedidos: @Model.TotalRecordCount</p>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<br />